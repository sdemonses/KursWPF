<Window x:Class="Kursach.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        mc:Ignorable="d"
        Title="Admin" Height="415.038" Width="986.842">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Stroke="Black" VerticalAlignment="Top" Width="979"/>
        <Label x:Name="label_Order" Content="Заказы" HorizontalAlignment="Left" Margin="127,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.355,0.019" Width="90" MouseDown="label_Order_MouseDown"/>
        <Label x:Name="label_Delivery" Content="Накладные" HorizontalAlignment="Left" Margin="233,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.355,0.019" Width="90" MouseDown="label_Delivery_MouseDown"/>
        <Label x:Name="label_Goods" Content="Товары" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.355,0.019" Width="90" MouseDown="label_Goods_MouseDown"/>
        <Grid x:Name="Goods" HorizontalAlignment="Left" Height="319" Margin="10,55,0,0" VerticalAlignment="Top" Width="959">
            <DataGrid x:Name="dataGridGoods" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="299" Width="729"/>


            <Button x:Name="button" Content="Добавить товар" HorizontalAlignment="Left" Margin="744,10,0,0" VerticalAlignment="Top" Width="205" Height="35" Click="button_Click"/>
        </Grid>
        <Grid x:Name="Order" HorizontalAlignment="Left" Height="319" Margin="10,55,0,0" VerticalAlignment="Top" Width="959" Visibility="Hidden">
            <DataGrid x:Name="dataGrid1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="299" Width="729"/>
            <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="867,81,0,0" VerticalAlignment="Top" Width="82" Height="35"/>
        </Grid>
        <Grid x:Name="Delivery" HorizontalAlignment="Left" Height="319" Margin="10,55,0,0" VerticalAlignment="Top" Width="959" Visibility="Hidden">
            <DataGrid x:Name="dataGrid2" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="299" Width="729"/>
            <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="759,90,0,0" VerticalAlignment="Top" Width="82" Height="35"/>
        </Grid>

    </Grid>
</Window>
